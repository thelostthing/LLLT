/* components/keyboard-plate/input-plate.wxss */
.inputPlateContainer {
  /* width: fit-content; */
  width: var(--width);
  display: flex;
  align-items: center;
  justify-content: space-between;
  /* column-gap: 16rpx; */
  position: relative;
}
.inputPlateContainer .inputPlateClear {
  position: absolute;
  top: -44rpx;
  right: 0;
  width: 64rpx;
  text-align: center;
  color: rgba(255, 81, 80, 1);
  line-height: 24rpx;
  font-size: 24rpx;
}
.inputPlateContainer .inputPlateChar {
  width: 64rpx;
  height: 86rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: var(--plateBackground);
  /* background-color: rgba(247, 247, 247, 1); */
  border-radius: 6rpx;
  font-weight: 500;
  color: #333333;
  font-size: 38rpx;
}
.inputPlateContainer .inputPlateChar.active {
  background-color: rgba(231, 250, 250, 1);
  box-shadow: 0 0 0 4rpx rgba(22, 207, 201, 1); 
}
.inputPlateContainer .inputPlateEVPlaceHolder {
  width: 64rpx;
  height: 86rpx;
  background: rgba(217, 248, 203, 1);
  border-radius: 6rpx;
  color: rgba(47, 47, 49, 1);
  font-size: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.inputPlateContainer .inputPlateEVPlaceHolder image {
  margin-top: 20rpx;
  margin-bottom: 10rpx;
  width: 20rpx;
  height: 20rpx;
}